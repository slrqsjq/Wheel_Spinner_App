<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- 主要内容区域 -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 底部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/tab_background"
        android:elevation="8dp">

        <!-- 转盘标签 -->
        <LinearLayout
            android:id="@+id/tab_spin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_spin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dial"
                app:tint="@color/tab_selected" />

            <TextView
                android:id="@+id/text_spin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_spin"
                android:textSize="12sp"
                android:textColor="@color/tab_selected"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- 设置标签 -->
        <LinearLayout
            android:id="@+id/tab_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icon_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/settings"
                app:tint="@color/tab_unselected" />

            <TextView
                android:id="@+id/text_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_settings"
                android:textSize="12sp"
                android:textColor="@color/tab_unselected"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
